{
  "name": "dreamhouse-website",
  "version": "1.0.0",
  "description": "Dream House Furniture Store - دريم هاوس معرض أثاث",
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy && npm run build:js",
    "build:js": "npx esbuild src/ts/main.ts --bundle --outfile=_site/script.js --target=es2016",
    "watch:js": "npx esbuild src/ts/main.ts --bundle --outfile=_site/script.js --target=es2016 --watch",
    "dev": "concurrently \"npm run start\" \"npm run watch:js\"",
    "cms": "npx decap-server"
  },
  "keywords": [
    "furniture",
    "egypt",
    "ecommerce"
  ],
  "author": "Dream House",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^9.2.1",
    "decap-server": "^3.5.0",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.10",
    "bootstrap": "^5.3.8",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  }
}
