---
layout: base.njk
title: {{ products_page.hero.title }}
---


<div class="container-fluid px-4 px-lg-5 mt-5 pt-3">


  <!-- Categories Filter -->
  <div class="row justify-content-center mb-5" id="bedrooms">
    <div class="col-md-10">
      <div class="d-flex justify-content-center flex-wrap gap-2" role="group" aria-label="Product Categories">
          <button type="button" class="btn btn-outline-primary active rounded-pill px-4 js-filter-btn" data-filter="all">الكل</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="bedrooms">غرف نوم</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="kids-bedrooms">غرف أطفال</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="sofas">أنتريهات</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="corners">ركنات</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="dining">سفرة</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="kitchens">مطابخ</button>
      </div>
      
      <!-- Price Filter -->
      <div class="row justify-content-center mt-4">
          <div class="col-md-6">
              <div class="bg-light p-3 rounded-4 shadow-sm">
                  <label for="priceRange" class="form-label d-flex justify-content-between fw-bold text-primary">
                      <span>تصفية حسب السعر:</span>
                      <span id="priceValue" class="text-dark">الكل</span>
                  </label>
                  <input type="range" class="form-range" min="0" max="60000" step="1000" id="priceRange" value="60000">
                  <div class="d-flex justify-content-between text-muted small">
                      <span>0 ج.م</span>
                      <span>60,000 ج.م</span>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>

  <!-- Bedrooms Section - Grid Layout -->
  <!-- Bedrooms Section - Grid Layout -->
  {% set allProducts = products.products if products.products else [] %}
  {% set bedroomProducts = allProducts | selectattr("category", "equalto", "bedrooms") | list %}
  {% if bedroomProducts | length > 0 %}
  <section class="mb-5 product-section" data-category="bedrooms">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="fw-bold section-title">
          <i class="fas fa-bed text-danger me-3"></i>
          غرف نوم رئيسية
        </h2>
        <p class="text-muted">اختر من بين تشكيلة واسعة من غرف النوم العصرية</p>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-4 row-cols-lg-6 g-2">
      {% for product in bedroomProducts %}
      {% if loop.index <= 6 %}
      <div class="col product-item" data-category="{{ product.category }}" data-price="{{ product.price }}">
        <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden product-card hover-lift">
          <div class="position-relative overflow-hidden" style="height: 150px;">
              <img src="{{ product.image }}" class="card-img-top object-fit-cover h-100 w-100" alt="{{ product.name }}" style="transition: transform 0.5s ease;">
              <div class="position-absolute top-0 end-0 m-3">
                  <span class="badge bg-white text-primary shadow-sm px-3 py-2 rounded-pill fw-bold">
                      {{ product.price | float }} جنيه
                  </span>
              </div>
               <div class="card-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-50 opacity-0" style="transition: opacity 0.3s ease;">
                  <a href="/product/{{ product.id }}/" class="btn btn-light rounded-pill px-4 py-2 fw-bold shadow-lg">
                     <i class="fas fa-eye me-2"></i> عرض التفاصيل
                  </a>
              </div>
          </div>
          <div class="card-body p-4">
            <h3 class="h5 fw-bold mb-2 text-dark">
               <a href="/product/{{ product.id }}/" class="text-decoration-none text-dark stretched-link">{{ product.name }}</a>
            </h3>
            <p class="text-muted small mb-3">{{ product.description | truncate(80) }}</p>
            <div class="d-flex align-items-center justify-content-between mt-auto pt-3 border-top border-light">
                <button class="btn btn-primary btn-sm rounded-pill px-3 js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
                   <i class="fas fa-shopping-cart me-2"></i> أضف للسلة
                </button>
                <small class="text-muted">
                   <i class="fas fa-star text-warning me-1"></i> 4.8
                </small>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Kids Bedrooms Section - Carousel Style -->
  {% set kidsProducts = allProducts | selectattr("category", "equalto", "kids-bedrooms") | list %}
  {% if kidsProducts | length > 0 %}
  <section class="mb-5 product-section" data-category="kids-bedrooms" id="kids-bedrooms">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="fw-bold section-title">
          <i class="fas fa-child text-danger me-3"></i>
          غرف نوم أطفال
        </h2>
        <p class="text-muted">غرف مبهجة ومريحة لأطفالك</p>
      </div>
    </div>
    <div class="row g-4">
      {% for product in kidsProducts %}
      {% if loop.index <= 6 %}
      <div class="col-md-6 col-lg-4 product-item" data-category="{{ product.category }}" data-price="{{ product.price }}">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden product-card" style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);">
          <div class="row g-0">
            <div class="col-5">
              <div class="position-relative" style="height: 100%; min-height: 250px;">
                <img src="{{ product.image }}" class="h-100 w-100 object-fit-cover" alt="{{ product.name }}">
                 <div class="position-absolute bottom-0 start-0 m-2">
                    <span class="badge bg-danger text-white px-3 py-2 rounded-pill fw-bold">
                        {{ product.price | float }} ج.م
                    </span>
                </div>
              </div>
            </div>
            <div class="col-7">
              <div class="card-body p-4 d-flex flex-column h-100">
                <h3 class="h6 fw-bold mb-2">
                   <a href="/product/{{ product.id }}/" class="text-decoration-none text-dark stretched-link">{{ product.name }}</a>
                </h3>
                <p class="text-muted small mb-auto">{{ product.description | truncate(60) }}</p>
                <div class="mt-3">
                  <button class="btn btn-primary btn-sm w-100 rounded-pill js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
                     <i class="fas fa-shopping-cart me-2"></i> أضف للسلة
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Sofas Section - Large Cards -->
  {% set sofaProducts = allProducts | selectattr("category", "equalto", "sofas") | list %}
  {% if sofaProducts | length > 0 %}
  <section class="mb-5 product-section" data-category="sofas" id="sofas">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="fw-bold section-title">
          <i class="fas fa-couch text-danger me-3"></i>
          أنتريهات
        </h2>
        <p class="text-muted">أنتريهات فاخرة لراحة لا مثيل لها</p>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
      {% for product in sofaProducts %}
      {% if loop.index <= 5 %}
      <div class="col product-item" data-category="{{ product.category }}" data-price="{{ product.price }}">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden product-card" style="height: 250px;">
          <div class="position-relative h-100">
              <img src="{{ product.image }}" class="card-img h-100 w-100 object-fit-cover" alt="{{ product.name }}" style="transition: transform 0.5s ease;">
              <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 60%);"></div>
              <div class="position-absolute bottom-0 start-0 p-4 text-white w-100">
                <div class="d-flex justify-content-between align-items-end">
                  <div>
                    <h3 class="h4 fw-bold mb-2">
                       <a href="/product/{{ product.id }}/" class="text-decoration-none text-white stretched-link">{{ product.name }}</a>
                    </h3>
                    <p class="mb-3 opacity-75">{{ product.description | truncate(80) }}</p>
                    <div class="d-flex align-items-center gap-3">
                      <span class="badge bg-danger px-4 py-2 rounded-pill fw-bold fs-6">
                          {{ product.price | float }} جنيه
                      </span>
                      <button class="btn btn-light rounded-pill px-4 js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
                         <i class="fas fa-shopping-cart me-2"></i> أضف
                      </button>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Corners Section - Compact Grid -->
  {% set cornerProducts = allProducts | selectattr("category", "equalto", "corners") | list %}
  {% if cornerProducts | length > 0 %}
  <section class="mb-5 product-section" data-category="corners" id="corners">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="fw-bold section-title">
          <i class="fas fa-chair text-danger me-3"></i>
          ركنات
        </h2>
        <p class="text-muted">ركنات عصرية لمساحات الجلوس</p>
      </div>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
      {% for product in cornerProducts %}
      {% if loop.index <= 8 %}
      <div class="col product-item" data-category="{{ product.category }}" data-price="{{ product.price }}">
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden product-card">
          <div class="position-relative" style="height: 200px;">
              <img src="{{ product.image }}" class="h-100 w-100 object-fit-cover" alt="{{ product.name }}">
              <div class="position-absolute top-0 end-0 m-2">
                  <span class="badge bg-white text-dark px-2 py-1 rounded-pill small fw-bold">
                      {{ product.price | float }} ج.م
                  </span>
              </div>
          </div>
          <div class="card-body p-3">
            <h3 class="h6 fw-bold mb-2 small">
               <a href="/product/{{ product.id }}/" class="text-decoration-none text-dark stretched-link">{{ product.name }}</a>
            </h3>
            <button class="btn btn-primary btn-sm w-100 rounded-pill small js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
               <i class="fas fa-plus me-1"></i> أضف
            </button>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Dining Section - List Style -->
  {% set diningProducts = allProducts | selectattr("category", "equalto", "dining") | list %}
  {% if diningProducts | length > 0 %}
  <section class="mb-5 product-section" data-category="dining" id="dining">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="fw-bold section-title">
          <i class="fas fa-utensils text-danger me-3"></i>
          غرف سفرة
        </h2>
        <p class="text-muted">غرف سفرة أنيقة لعائلتك</p>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
      {% for product in diningProducts %}
      {% if loop.index <= 8 %}
      <div class="col product-item" data-category="{{ product.category }}" data-price="{{ product.price }}">
        <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden product-card">
          <div class="position-relative" style="height: 180px;">
              <img src="{{ product.image }}" class="h-100 w-100 object-fit-cover" alt="{{ product.name }}">
              <div class="position-absolute top-0 end-0 m-3">
                 <span class="badge bg-danger text-white px-3 py-2 rounded-pill fw-bold">
                      {{ product.price | float }} جنيه
                  </span>
              </div>
          </div>
          <div class="card-body p-4 d-flex flex-column">
            <h3 class="h5 fw-bold mb-2">
                <a href="/product/{{ product.id }}/" class="text-decoration-none text-dark stretched-link">{{ product.name }}</a>
            </h3>
            <p class="text-muted small mb-3">{{ product.description | truncate(60) }}</p>
            <div class="mt-auto pt-3 border-top">
              <div class="d-flex align-items-center justify-content-between">
                <button class="btn btn-primary btn-sm rounded-pill px-3 js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
                    <i class="fas fa-shopping-cart me-2"></i> أضف
                </button>
                <div class="text-muted small">
                  <i class="fas fa-star text-warning"></i> 4.9
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Kitchens Section - Modern Grid -->
  {% set kitchenProducts = allProducts | selectattr("category", "equalto", "kitchens") | list %}
  {% if kitchenProducts | length > 0 %}
  <section class="mb-5 product-section" data-category="kitchens" id="kitchens">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h2 class="fw-bold section-title">
          <i class="fas fa-blender text-danger me-3"></i>
          مطابخ
        </h2>
        <p class="text-muted">مطابخ عصرية بتصاميم فريدة</p>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
      {% for product in kitchenProducts %}
      {% if loop.index <= 6 %}
      <div class="col product-item" data-category="{{ product.category }}" data-price="{{ product.price }}">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden product-card">
          <div class="position-relative" style="height: 200px;">
              <img src="{{ product.image }}" class="h-100 w-100 object-fit-cover" alt="{{ product.name }}" style="transition: transform 0.5s ease;">
              <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.7) 100%);"></div>
              <div class="position-absolute bottom-0 start-0 p-3 text-white w-100">
                <h3 class="h6 fw-bold mb-1">
                   <a href="/product/{{ product.id }}/" class="text-decoration-none text-white stretched-link">{{ product.name }}</a>
                </h3>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge bg-danger px-3 py-2 rounded-pill fw-bold">
                      {{ product.price | float }} ج.م
                  </span>
                  <button class="btn btn-light btn-sm rounded-pill px-3 js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
                     <i class="fas fa-cart-plus"></i>
                  </button>
                </div>
              </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Why Us Section -->
  <div class="row mt-5 pt-5 border-top">
    <div class="col-12 text-center mb-5">
      <h2 class="fw-bold section-title">{{ products_page.whyUs.title }}</h2>
    </div>
    {% for item in products_page.whyUs.items %}
    <div class="col-md-4 text-center mb-4">
      <div class="p-4 rounded-4 bg-light h-100">
        <div class="text-warning display-5 mb-3">
          <i class="{{ item.icon }}"></i>
        </div>
        <h4 class="h5 fw-bold">{{ item.title }}</h4>
        <p class="text-muted small mb-0">{{ item.description }}</p>
      </div>
    </div>
    {% endfor %}
  </div>

  <!-- CTA Section -->
  <div class="text-center mt-5">
      <p class="lead mb-4">هل تبحث عن عروض ومجموعة كاملة؟</p>
      <div class="d-flex justify-content-center gap-3">
         <a href="/offers/" class="btn btn-warning btn-lg fw-bold px-5">{{ products_page.cta.offersButton }}</a>
         <a href="/contact/" class="btn btn-outline-primary btn-lg px-5">{{ products_page.cta.contactButton }}</a>
      </div>
  </div>

</div>

<style>
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeOut {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}

.product-card:hover img {
    transform: scale(1.05);
}

.card-overlay {
    transition: opacity 0.3s ease !important;
}

.product-card:hover .card-overlay {
    opacity: 1 !important;
}

.product-section {
    scroll-margin-top: 100px;
}
</style>