---
layout: base.njk
title: الرئيسية
---
  <!-- ===== القسم الرئيسي (Hero) ===== -->
  <section class="d-flex align-items-center justify-content-center text-center position-relative text-white" style="min-height: 80vh; background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('{{ home.hero.image }}') no-repeat center center/cover; background-color: var(--primary-wood);">
    <div class="container position-relative z-2">
      <h1 class="fw-bold mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">{{ home.hero.title }}</h1>
      <p class="lead mb-5" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">{{ home.hero.subtitle }}</p>
      <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a href="{{ home.hero.cta.primary.link }}" class="btn btn-danger btn-lg px-5 py-3 fw-bold">{{ home.hero.cta.primary.text }}</a>
        <a href="{{ home.hero.cta.secondary.link }}" class="btn btn-outline-light btn-lg px-5 py-3 fw-bold">{{ home.hero.cta.secondary.text }}</a>
      </div>
    </div>
  </section>

  <!-- ===== القسم المميزات===== -->
  <section class="py-5" id="features">
    <div class="container-fluid px-4 px-lg-5 text-center">
      <h2 class="mb-3 fw-bold">{{ home.features.sectionTitle }}</h2>
      <p class="text-muted mb-5">{{ home.features.sectionSubtitle }}</p>
      
      <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4 justify-content-center">
      {% for feature in home.features.items %}
        <div class="col">
          <div class="card h-100 border-0 shadow-sm p-3 hover-lift">
            <div class="mb-3 text-danger highlight-icon">
              <i class="{{ feature.icon }}"></i>
            </div>
            <h3 class="h5 fw-bold mb-3">{{ feature.title }}</h3>
            <p class="text-muted mb-0 small">{{ feature.description }}</p>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </section>

  <!-- ===== القسم المنتجات===== -->
  <section class="py-5 bg-light" id="products">
    <div class="container-fluid px-4 px-lg-5">
      <div class="text-center mb-5">
        <h2 class="fw-bold">منتجاتنا المميزة</h2>
        <p class="text-muted">تشكيلة واسعة من الأثاث لجميع الأذواق والمساحات</p>
      </div>
      
      <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        {% for category in home.categories.items %}
        <div class="col">
            <div class="card h-100 border-0 shadow overflow-hidden group-hover-effect">
                <div class="product-image d-flex align-items-center justify-content-center text-white" style="height: 180px; background: {{ category.background }}; position: relative;">
                    <!-- If an image is provided instead of gradient, use it -->
                    {% if category.image %}
                      <img src="{{ category.image }}" alt="{{ category.title }}" class="w-100 h-100 object-fit-cover position-absolute top-0 start-0" style="opacity: 0.8;">
                      <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-25"></div>
                    {% endif %}
                    
                    <div class="position-relative z-2">
                       <i class="{{ category.icon }}"></i>
                    </div>
                </div>
                <div class="card-body text-center d-flex flex-column">
                    <h3 class="fw-bold mb-2">{{ category.title }}</h3>
                    <p class="card-text text-muted small mb-3">{{ category.description }}</p>
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        {% if category.badge1 %}
                        <span class="badge bg-light text-dark border">{{ category.badge1 }}</span>
                        {% endif %}
                        {% if category.badge2 %}
                        <span class="badge bg-light text-dark border">{{ category.badge2 }}</span>
                        {% endif %}
                    </div>
                    <a href="{{ category.link }}" class="btn btn-outline-primary w-100 mt-auto stretched-link">اعرف المزيد</a>
                </div>
            </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- ===== قسم الجودة (الفيل) ===== -->
  <section class="py-5 position-relative overflow-hidden">
    <div class="container">
      <div class="row align-items-center bg-white rounded-4 shadow-sm overflow-hidden border border-light">
        <div class="col-lg-6 p-0 order-lg-2">
           <img src="{{ home.quality.image }}" alt="{{ home.quality.title }}" class="img-fluid w-100">
        </div>
        <div class="col-lg-6 p-4">
          <div class="text-start">
            <span class="badge bg-danger px-3 py-2 mb-3 fw-bold rounded-pill">{{ home.quality.badge }}</span>
            <h2 class="fw-bold mb-4 text-primary">{{ home.quality.title }}</h2>
            <p class="lead text-muted mb-4 text-dark font-monospace">{{ home.quality.subtitle }}</p>
            <p class="text-muted mb-5 small">
              {{ home.quality.description }}
            </p>
            <a href="{{ home.quality.buttonLink }}" class="btn btn-outline-primary rounded-pill px-4">
              <i class="fas fa-shield-alt me-2"></i> {{ home.quality.buttonText }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== قسم الأسئلة الشائعة ===== -->
  <section class="py-5 bg-light" id="faq">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="fw-bold mb-3">{{ home.faq.title }}</h2>
        <p class="text-muted small">{{ home.faq.subtitle }}</p>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="accordion" id="accordionFAQ">
            {% for item in home.faq.items %}
            <div class="accordion-item border-0 shadow-sm mb-3 rounded overflow-hidden">
              <h2 class="accordion-header" id="heading{{ loop.index }}">
                <button class="accordion-button {% if not loop.first %}collapsed{% endif %} fw-bold bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="{% if loop.first %}true{% else %}false{% endif %}" aria-controls="collapse{{ loop.index }}">
                  {{ item.question }}
                </button>
              </h2>
              <div id="collapse{{ loop.index }}" class="accordion-collapse collapse {% if loop.first %}show{% endif %}" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#accordionFAQ">
                <div class="accordion-body bg-white text-muted small">
                  {{ item.answer }}
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== قسم الإحصائيات ===== -->
  <section class="py-5 text-white" id="stats" style="background: linear-gradient(135deg, var(--primary-wood) 0%, var(--primary-wood-light) 100%);">
    <div class="container text-center">
      <h2 class="mb-5 d-inline-block border-bottom pb-2 border-danger">{{ home.stats.sectionTitle }}</h2>
      <div class="row g-4">
      {% for stat in home.stats.items %}
        <div class="col-md-3 col-6">
          <div class="p-4 rounded bg-white bg-opacity-10 border border-danger h-100">
            <div class="mb-3 text-danger">
              <i class="{{ stat.icon }} fa-2x"></i>
            </div>
            <div class="h3 fw-bold mb-2"><span class="counter" data-target="{{ stat.number }}">0</span>+</div>
            <p class="mb-0 text-white-50 small">{{ stat.label }}</p>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </section>

  <!-- ===== قسم الفروع ===== -->
  <section class="py-5 bg-light" id="branches">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="fw-bold mb-3">زورنا في فروعنا</h2>
        <p class="text-muted small">زيارة أي من فروعنا لتجربة تسوق فريدة ومشاهدة المنتجات مباشرة</p>
      </div>
      
      <div class="row g-4 justify-content-center">
        {% for branch in branches_page.branches %}
        <div class="col-lg-4 col-md-6">
          <div class="card h-100 border-0 shadow-sm overflow-hidden hover-lift transition-all rounded-4">
            <div class="card-body p-3 text-center d-flex flex-column">
              <h3 class="h5 fw-bold mb-3 text-dark">{{ branch.name }}</h3>
              
              <div class="mb-4">
                  <p class="text-muted small mb-2 d-flex align-items-center justify-content-center gap-2">
                      <i class="fas fa-map-marker-alt text-danger"></i>
                      {{ branch.address }}
                  </p>
                  {% if branch.phone %}
                  <p class="text-muted small mb-0 d-flex align-items-center justify-content-center gap-2">
                      <i class="fas fa-phone text-danger"></i>
                      {{ branch.phone }}
                  </p>
                  {% endif %}
              </div>
              
              <div class="mt-auto d-flex gap-2 justify-content-center">
                {% if branch.mapLink %}
                <a href="{{ branch.mapLink }}" target="_blank" class="btn btn-primary rounded-pill px-4 flex-grow-1">
                  <i class="fas fa-location-arrow me-2"></i> اللوكيشن
                </a>
                {% endif %}
                <a href="tel:{{ branch.phone }}" class="btn btn-outline-dark rounded-circle" style="width: 40px; height: 40px; padding: 0; display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-phone"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- ===== قسم الاتصال السريع ===== -->
  <section class="py-5 bg-light" id="quick-contact">
    <div class="container text-center">
      <h2 class="fw-bold mb-3">تواصل معنا الآن</h2>
      <p class="text-muted mb-4">فريقنا جاهز لمساعدتك في اختيار الأثاث المناسب</p>
      
      <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a href="/contact/" class="btn btn-primary btn-lg">
          <i class="fas fa-envelope me-2"></i> أرسل استفسار
        </a>
        <a href="https://wa.me/{{ settings.contact.whatsapp }}" class="btn btn-danger btn-lg fw-bold" target="_blank">
          <i class="fab fa-whatsapp me-2"></i> واتساب
        </a>
        <a href="tel:{{ settings.contact.phone }}" class="btn btn-outline-dark btn-lg">
          <i class="fas fa-phone me-2"></i> اتصل بنا
        </a>
      </div>
    </div>
  </section>
