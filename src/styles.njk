/* ZERO Custom CSS - Pure Bootstrap with minimal tweaks */

/* RTL Only */
body {
    direction: rtl;
    font-family: 'Segoe UI', Tahoma, sans-serif;
}

html {
    scroll-behavior: smooth;
}

/* Mobile Font Sizing */
@media (max-width: 576px) {
    body {
        font-size: 14px;
    }
    h1 { font-size: 1.75rem; }
    h2 { font-size: 1.5rem; }
    h3 { font-size: 1.25rem; }
    h4 { font-size: 1.1rem; }
    .btn-lg {
        padding: 0.5rem 1rem;
        font-size: 1rem;
    }
}

/* Bootstrap Colors */
:root {
    --bs-primary: #dc3545; /* Red - Matches btn-danger */
    --bs-danger: #dc3545;
}

/* Navbar Tweaks */
.navbar {
    border-top: 0 !important;
}

.navbar-dark .navbar-nav .nav-link {
    color: #ffffff !important;
    font-weight: 400;
}

.navbar-dark .navbar-nav .nav-link:hover,
.navbar-dark .navbar-nav .nav-link:focus {
    color: rgba(255, 255, 255, 0.8) !important;
}

/* Feature Cards Premium Styling */
.feature-card {
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.05);
    background: #fff;
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
    border-color: rgba(220, 53, 69, 0.3);
}

.feature-icon {
    width: 70px;
    height: 70px;
    background-color: rgba(220, 53, 69, 0.08);
    color: var(--bs-primary);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 1.75rem;
    margin-bottom: 1.25rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.feature-card:hover .feature-icon {
    background-color: var(--bs-primary);
    color: #fff;
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 10px 20px rgba(220, 53, 69, 0.3);
}

/* Hover Dropdown on Desktop */
@media (min-width: 992px) {
    .navbar .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: 0;
        animation: dropdownSlideIn 0.3s ease-out forwards;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-radius: 8px;
    }
}

@keyframes dropdownSlideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Hide Dropdown Arrow on Mobile */
@media (max-width: 991.98px) {
    .navbar-nav .dropdown-toggle::after {
        display: none !important;
    }
}

/* Dropdown Items Styling */
.dropdown-menu {
    padding: 0.5rem;
}

.dropdown-item {
    border-radius: 6px;
    padding: 0.6rem 1rem;
    font-weight: 500;
    color: #333;
    transition: all 0.2s ease;
}

.dropdown-item:hover, .dropdown-item:focus {
    background-color: rgba(211, 47, 47, 0.08); /* Light red tint */
    color: var(--bs-primary);
    transform: translateX(-5px); /* Slide left slightly on hover */
}

.dropdown-item i {
    width: 24px;
    text-align: center;
    color: #999;
    transition: color 0.2s ease;
}

.dropdown-item:hover i {
    color: var(--bs-primary);
}

.dropdown-divider {
    margin: 0.5rem 0;
    border-color: rgba(0,0,0,0.05);
}
