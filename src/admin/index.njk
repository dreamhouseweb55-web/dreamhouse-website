<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>لوحة التحكم - Dream House</title>
  <style>
    body { margin: 0; padding: 0; }
    .loading {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: Arial, sans-serif;
      direction: rtl;
    }
    .loading-text { font-size: 18px; color: #666; }
  </style>
</head>
<body>
  <div class="loading" id="loading">
    <p class="loading-text">جاري تحميل لوحة التحكم...</p>
  </div>
  
  <!-- OAuth callback handler - MUST be before Decap CMS -->
  <script>
    // Listen for OAuth callback messages
    window.addEventListener('message', function(event) {
      console.log('[Admin] Received message:', event.data);
      
      // Check if it's an auth message
      if (typeof event.data === 'string' && event.data.startsWith('authorization:')) {
        console.log('[Admin] Auth message received!');
        // The message will be handled by Decap CMS
      }
    });
    
    // Log for debugging
    console.log('[Admin] OAuth message listener ready');
  </script>
  
  <!-- Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <script>
    // Hide loading after CMS loads
    window.addEventListener('load', function() {
      var loading = document.getElementById('loading');
      if (loading) {
        setTimeout(function() {
          loading.style.display = 'none';
        }, 1000);
      }
    });
  </script>
</body>
</html>
