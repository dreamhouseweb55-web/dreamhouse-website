---
layout: base.njk
title: {{ offers.hero.title }}
---
  <section class="d-flex align-items-center justify-content-center text-center text-white" style="height: 400px; background: {% if offers.hero.image %}linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('{{ offers.hero.image }}') no-repeat center center/cover{% else %}linear-gradient(135deg, var(--primary-wood) 0%, var(--primary-wood-light) 100%){% endif %};">
    <div class="container">
      <h1 class="display-3 fw-bold mb-3">{{ offers.hero.title }}</h1>
      <p class="lead fs-3">{{ offers.hero.subtitle }}</p>
    </div>
  </section>
  
  <!-- تنويه موسمي -->
  <section class="py-3 bg-warning">
    <div class="container text-center text-dark">
      <h3 class="h5 fw-bold mb-1">
        <i class="fas fa-info-circle me-1"></i> {{ offers.seasonalNote.title }}
      </h3>
      <p class="mb-0">
        {{ offers.seasonalNote.text }}
      </p>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="fw-bold section-title">{{ offers.offersSection.title }}</h2>
        <p class="text-muted">{{ offers.offersSection.subtitle }}</p>
      </div>

      <div class="row g-5 justify-content-center">

        {% for offer in offers.offersSection.items %}
        <div class="col-lg-5 col-md-6">
          <div class="card h-100 shadow{% if offer.isSpecial %}-lg transform-scale-sm{% endif %} border-warning border-3">
            <div class="card-header {% if offer.isSpecial %}text-white position-relative overflow-hidden{% else %}bg-warning{% endif %} text-center py-3 border-0" 
                 {% if offer.isSpecial %}style="background: linear-gradient(135deg, var(--gold-accent) 0%, #F4D03F 100%);"{% endif %}>
              {% if offer.isSpecial %}
              <div class="position-absolute top-0 end-0 bg-danger text-white px-2 py-1 small fw-bold">{{ offer.specialLabel }}</div>
              {% endif %}
              <h3 class="h4 fw-bold text-dark m-0">
                <i class="{{ offer.icon }} me-2"></i> {{ offer.title }}
              </h3>
            </div>
            <div class="card-body p-4">
              <p class="text-center text-muted mb-4 fs-5">
                {{ offer.description }}
              </p>

              <div class="mb-4">
                <h4 class="h6 fw-bold text-primary mb-3">
                  <i class="fas fa-check-circle text-warning me-2"></i> يشمل العرض:
                </h4>
                <ul class="list-group list-group-flush mb-0">
                  {% for item in offer.includes %}
                  <li class="list-group-item px-0 py-2 border-light">
                    <i class="{{ item.icon }} text-warning me-2"></i>
                    {{ item.text | safe }}
                  </li>
                  {% endfor %}
                </ul>
              </div>

              <div class="alert alert-light border shadow-sm mb-4">
                <h4 class="h6 fw-bold text-primary mb-2">
                  <i class="fas fa-gift text-warning me-2"></i> مميزات العرض:
                </h4>
                <div class="row g-2">
                    {% for feature in offer.features %}
                    <div class="col-6"><small><i class="fas fa-check text-success me-1"></i> {{ feature }}</small></div>
                    {% endfor %}
                </div>
              </div>

              <div class="text-center mb-4">
                <p class="text-muted small mb-1">السعر يبدأ من</p>
                <p class="display-6 fw-bold text-primary mb-1">{{ offer.priceLabel }}</p>
                <p class="text-muted small">اتصل للاستفسار عن السعر الدقيق</p>
              </div>

              <div class="d-grid">
                <a href="https://wa.me/{{ settings.contact.whatsapp }}?text={{ 'مرحباً، أرغب في طلب عرض: ' | urlencode }}{{ offer.title | urlencode }}" class="btn btn-warning fw-bold text-dark btn-lg" target="_blank">
                  <i class="fab fa-whatsapp me-2"></i> اطلب العرض
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}

      </div>
    </div>
  </section>

  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-5 fw-bold section-title">{{ offers.whyUs.title }}</h2>

      <div class="row g-4 justify-content-center">
        {% for item in offers.whyUs.items %}
        <div class="col-md-4">
          <div class="card h-100 border-0 shadow-sm p-4 text-center">
             <div class="display-5 text-warning mb-3"><i class="{{ item.icon }}"></i></div>
             <h3 class="h5 fw-bold mb-2">{{ item.title }}</h3>
             <p class="text-muted small">{{ item.description }}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <h2 class="text-center mb-5 fw-bold section-title">{{ offers.conditions.title }}</h2>

      <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title h5 fw-bold text-primary mb-3">
                        <i class="fas fa-info-circle text-warning me-2"></i> {{ offers.conditions.infoTitle }}
                    </h4>
                    <ul class="list-unstyled mb-0 lh-lg text-muted">
                        {% for item in offers.conditions.items %}
                        <li><i class="fas fa-check text-success me-2"></i> {{ item }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-5 text-center text-white" style="background: linear-gradient(135deg, var(--primary-wood) 0%, var(--primary-wood-light) 100%);">
    <div class="container">
      <h2 class="fw-bold mb-3">{{ offers.cta.title }}</h2>
      <p class="lead text-white-50 mb-4">
        {{ offers.cta.subtitle }}
      </p>

      <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a href="/contact/" class="btn btn-warning fw-bold text-dark btn-lg">
          <i class="fas fa-envelope me-2"></i> أرسل استفسار
        </a>
        <a href="https://wa.me/{{ settings.contact.whatsapp }}" class="btn btn-outline-light btn-lg" target="_blank">
          <i class="fab fa-whatsapp me-2"></i> واتساب
        </a>
        <a href="tel:{{ settings.contact.phone }}" class="btn btn-outline-light btn-lg">
          <i class="fas fa-phone me-2"></i> اتصل بنا
        </a>
      </div>
    </div>
  </section>
