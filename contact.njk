---
layout: base.njk
title: {{ contact_page.hero.title }}
---
  <section class="d-flex align-items-center justify-content-center text-center text-white" style="height: 350px; background: {% if contact_page.hero.image %}linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('{{ contact_page.hero.image }}') no-repeat center center/cover{% else %}linear-gradient(135deg, var(--primary-wood) 0%, var(--primary-wood-light) 100%){% endif %};">
    <div class="container">
      <h1 class="display-4 fw-bold mb-3">{{ contact_page.hero.title }}</h1>
      <p class="lead">{{ contact_page.hero.subtitle }}</p>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <div class="row g-5">
        
        <!-- نموذج الاتصال -->
        <div class="col-lg-7">
          <h2 class="mb-4 fw-bold text-primary border-bottom pb-2 d-inline-block">{{ contact_page.formSection.title }}</h2>

          <form id="contactForm" data-whatsapp="{{ settings.contact.whatsapp }}" class="p-4 shadow rounded-3 bg-white border">
            <div class="mb-3">
              <label for="name" class="form-label fw-bold">الاسم الكامل <span class="text-danger">*</span></label>
              <input type="text" id="name" name="name" class="form-control form-control-lg" required placeholder="أدخل اسمك">
            </div>

            <div class="mb-3">
              <label for="phone" class="form-label fw-bold">رقم الهاتف <span class="text-danger">*</span></label>
              <input type="tel" id="phone" name="phone" class="form-control form-control-lg" required placeholder="مثال: 01012345678">
            </div>

            <div class="mb-3">
              <label for="email" class="form-label fw-bold">البريد الإلكتروني (اختياري)</label>
              <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="example@email.com">
            </div>

            <div class="mb-3">
              <label for="interest" class="form-label fw-bold">مهتم بـ</label>
              <select id="interest" name="interest" class="form-select form-select-lg">
                <option value="">اختر المنتج</option>
                <option value="bedrooms">غرف نوم رئيسية</option>
                <option value="kids-bedrooms">غرف نوم أطفال</option>
                <option value="sofas">أنتريهات</option>
                <option value="corners">ركنات</option>
                <option value="dining">غرف سفرة</option>
                <option value="kitchens">مطابخ</option>
                <option value="package-3">عرض 3 غرف</option>
                <option value="package-4">عرض 4 غرف</option>
                <option value="other">أخرى</option>
              </select>
            </div>

            <div class="mb-4">
              <label for="message" class="form-label fw-bold">رسالتك <span class="text-danger">*</span></label>
              <textarea id="message" name="message" rows="5" class="form-control form-control-lg" required placeholder="اكتب رسالتك أو استفسارك هنا..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
              <i class="fas fa-paper-plane me-2"></i> إرسال الرسالة
            </button>
          </form>
        </div>

        <!-- معلومات التواصل -->
        <div class="col-lg-5">
          <h2 class="mb-4 fw-bold text-primary border-bottom pb-2 d-inline-block">{{ contact_page.infoSection.title }}</h2>

          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
              <div class="flex-shrink-0 bg-light p-3 rounded-circle text-warning fs-3">
                <i class="fas fa-phone"></i>
              </div>
              <div class="flex-grow-1 ms-3">
                <h5 class="fw-bold mb-1">{{ contact_page.infoSection.contactCardTitle }}</h5>
                 <a href="tel:{{ settings.contact.phone }}" class="text-decoration-none text-dark fs-5 fw-bold font-monospace">
                   {{ settings.contact.phone }}
                 </a>
                 <div class="text-muted small mt-1">
                   {{ contact_page.infoSection.contactCardText | safe }}
                 </div>
              </div>
            </div>
          </div>

          <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
              <div class="flex-shrink-0 bg-light p-3 rounded-circle text-success fs-3">
                <i class="fab fa-whatsapp"></i>
              </div>
              <div class="flex-grow-1 ms-3">
                <h5 class="fw-bold mb-1">{{ contact_page.infoSection.whatsappCardTitle }}</h5>
                <a href="https://wa.me/{{ settings.contact.whatsapp }}" target="_blank" class="btn btn-success btn-sm mt-1">
                   {{ contact_page.infoSection.whatsappButtonText }}
                </a>
              </div>
            </div>
          </div>

          <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
              <div class="flex-shrink-0 bg-light p-3 rounded-circle text-primary fs-3">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="flex-grow-1 ms-3">
                <h5 class="fw-bold mb-1">{{ contact_page.infoSection.emailCardTitle }}</h5>
                 <a href="mailto:{{ settings.contact.email }}" class="text-decoration-none text-muted">
                    {{ settings.contact.email }}
                 </a>
              </div>
            </div>
          </div>

          <div class="card border-0 shadow-sm text-center p-4">
             <h5 class="fw-bold mb-3">{{ contact_page.infoSection.socialTitle }}</h5>
             <div class="d-flex justify-content-center gap-3">
               <a href="{{ settings.social.facebook }}" target="_blank" class="btn btn-primary rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                 <i class="fab fa-facebook-f"></i>
               </a>
               <a href="{{ settings.social.instagram }}" target="_blank" class="btn text-white rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);">
                 <i class="fab fa-instagram"></i>
               </a>
               <a href="{{ settings.social.tiktok }}" target="_blank" class="btn btn-dark rounded-circle" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                 <i class="fab fa-tiktok"></i>
               </a>
             </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-5 fw-bold section-title">{{ contact_page.branchesSection.title }}</h2>

      <div class="row g-4 justify-content-center">
      {% for branch in branches.branches | slice(0, 2) %}
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4 text-center">
              <div class="text-warning display-4 mb-3">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <h3 class="h4 fw-bold mb-3">{{ branch.name }}</h3>
              <p class="text-muted mb-4">
                <strong>العنوان:</strong> {{ branch.location }}<br>
                <strong>ساعات العمل:</strong><br>
                {{ branch.hours | nl2br | safe }}
              </p>
              <div class="d-grid gap-2">
                <a href="tel:{{ branch.phone }}" class="btn btn-outline-dark">
                  <i class="fas fa-phone me-2"></i> اتصل بالفرع
                </a>
                <a href="/branches/" class="btn btn-primary">
                  <i class="fas fa-map me-2"></i> عرض الموقع
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <h2 class="text-center mb-5 fw-bold section-title">{{ contact_page.faq.title }}</h2>

      <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="accordion shadow-sm" id="faqAccordion">
                {% for item in contact_page.faq.items %}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button {% if not loop.first %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="{% if loop.first %}true{% else %}false{% endif %}">
                            {{ item.question }}
                        </button>
                    </h2>
                    <div id="collapse{{ loop.index }}" class="accordion-collapse collapse {% if loop.first %}show{% endif %}" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            {{ item.answer }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
      </div>
    </div>
  </section>
