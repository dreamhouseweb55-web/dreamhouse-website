{% include "src/css/variables.css" %}

/* Custom Overrides on top of Bootstrap */
@font-face {
    font-family: 'Almarai';
    src: url('/assets/fonts/Almarai-Bold.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

:root {
    --primary-wood: #5D4037;
    --primary-wood-light: #8D6E63;
    --gold-accent: #D32F2F; /* Changed to RED per brand identity */
    font-family: 'Almarai', sans-serif;
}

body {
    direction: rtl;
    text-align: right;
    font-family: 'Almarai', sans-serif;
    background-color: #f8f9fa; /* Bootstrap light gray */
    line-height: 1.5; /* Reduced from 1.8 for compactness */
    font-size: 0.95rem; /* Slightly smaller base font */
}

/* Global Spacing Utilities */
section, main {
    margin-bottom: 2rem; /* Reduced from 4rem */
}

h1, h2, h3, h4, h5, h6 {
    margin-bottom: 1rem;
    line-height: 1.3;
}

/* Explicit Header Size Prevention */
h1 { font-size: 2rem; }
h2 { font-size: 1.75rem; }
h3 { font-size: 1.5rem; }
h4 { font-size: 1.25rem; }
h5 { font-size: 1.1rem; }
h6 { font-size: 1rem; }

a { text-decoration: none; }

/* Navbar Compactness */
.navbar-dark .navbar-nav .nav-link {
    font-size: 0.85rem; /* Smaller navbar links */
    padding: 0.25rem 0.8rem !important; /* Tighter padding */
}

/* Navbar Overrides */
.navbar-dark .navbar-nav .nav-link {
    color: rgba(255,255,255,0.9);
    font-weight: 500;
    font-size: 0.9rem;
    padding: 0.4rem 1rem !important;
    border-radius: 50rem;
    transition: all 0.3s ease;
    margin: 0 2px;
}
.navbar-dark .navbar-nav .nav-link:hover,
.navbar-dark .navbar-nav .nav-link:focus {
    color: var(--gold-accent);
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
}

/* Card Hover Effect */
.hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
}

/* Group Hover Effect for Products */
.group-hover-effect:hover .product-image img {
    transform: scale(1.05);
}
.transition-transform {
    transition: transform 0.5s ease;
}

/* Buttons */
.btn-primary {
    background-color: var(--primary-wood);
    border-color: var(--primary-wood);
}
.btn-primary:hover {
    background-color: #4E342E;
    border-color: #4E342E;
}
.btn-warning {
    background-color: var(--gold-accent);
    border-color: var(--gold-accent);
    color: #fff;
}
.btn-warning:hover {
    background-color: #b71c1c; /* Darker Red */
    border-color: #b71c1c;
    color: #fff;
}

/* Bootstrap Overrides for Brand Identity (Red instead of Yellow) */
.text-warning {
    color: var(--gold-accent) !important;
}
.bg-warning {
    background-color: var(--gold-accent) !important;
}
.border-warning {
    border-color: var(--gold-accent) !important;
}
.badge.bg-warning {
    background-color: var(--gold-accent) !important;
    color: #fff !important;
}

