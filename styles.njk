{% include "src/css/variables.css" %}

/* Custom Overrides on top of Bootstrap */
@font-face {
    font-family: 'Almarai';
    src: url('/assets/fonts/Almarai-Bold.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

:root {
    --primary-wood: #5D4037;
    --primary-wood-light: #8D6E63;
    --gold-accent: #D32F2F; /* Changed to RED per brand identity */
    font-family: 'Almarai', sans-serif;
}

/* Aggressive Compression with Massive White Space */
html {
    font-size: 12px; /* Ultra-small base size for "Micro" feel */
}

body {
    direction: rtl;
    text-align: right;
    font-family: 'Almarai', sans-serif;
    background-color: #f8f9fa;
    line-height: 2.0; /* Very airy text */
}

/* Massive Spacing (Negative Space) */
section, main {
    margin-bottom: 6rem; /* Huge vertical gaps */
    padding-top: 2rem;
    padding-bottom: 2rem;
}

/* Horizontal Breathing Room */
.container {
    max-width: 1200px;
    padding-left: 2rem;
    padding-right: 2rem;
}

/* Tiny Headers but Airy */
h1 { font-size: 1.8rem !important; margin-bottom: 1.5rem; letter-spacing: 0.5px; }
h2 { font-size: 1.5rem !important; margin-bottom: 1.2rem; }
h3 { font-size: 1.2rem !important; margin-bottom: 1rem; }
h4 { font-size: 1.1rem !important; margin-bottom: 0.8rem; }
h5, h6 { font-size: 1rem !important; margin-bottom: 0.5rem; }

/* Card - Float in space */
.card {
    margin-bottom: 2rem;
    border: none;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05); /* Subtle shadow */
}
.card-body {
    padding: 1.5rem !important; /* More internal space */
}
.card-title {
    font-size: 1.2rem;
    margin-bottom: 1rem;
}

/* Navbar - Small but spaced */
.navbar {
    padding-top: 0.8rem !important;
    padding-bottom: 0.8rem !important;
}
.navbar-brand img {
    height: 40px !important; /* Smaller Logo */
}
.navbar-dark .navbar-nav .nav-link {
    font-size: 0.8rem !important;
    padding: 0.2rem 0.6rem !important;
    margin: 0 1px;
}

/* Button Scaling */
.btn {
    padding: 0.25rem 0.75rem;
    font-size: 0.85rem;
}
.btn-lg {
    padding: 0.4rem 1rem;
    font-size: 1rem;
}
.navbar-dark .navbar-nav .nav-link:hover,
.navbar-dark .navbar-nav .nav-link:focus {
    color: var(--gold-accent);
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
}

/* Card Hover Effect */
.hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
}

/* Group Hover Effect for Products */
.group-hover-effect:hover .product-image img {
    transform: scale(1.05);
}
.transition-transform {
    transition: transform 0.5s ease;
}

/* Buttons */
.btn-primary {
    background-color: var(--primary-wood);
    border-color: var(--primary-wood);
}
.btn-primary:hover {
    background-color: #4E342E;
    border-color: #4E342E;
}
.btn-warning {
    background-color: var(--gold-accent);
    border-color: var(--gold-accent);
    color: #fff;
}
.btn-warning:hover {
    background-color: #b71c1c; /* Darker Red */
    border-color: #b71c1c;
    color: #fff;
}

/* Bootstrap Overrides for Brand Identity (Red instead of Yellow) */
.text-warning {
    color: var(--gold-accent) !important;
}
.bg-warning {
    background-color: var(--gold-accent) !important;
}
.border-warning {
    border-color: var(--gold-accent) !important;
}
.badge.bg-warning {
    background-color: var(--gold-accent) !important;
    color: #fff !important;
}

