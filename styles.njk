{% include "src/css/variables.css" %}

/* Custom Overrides on top of Bootstrap */
@font-face {
    font-family: 'Almarai';
    src: url('/assets/fonts/Almarai-Bold.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

:root {
    --primary-wood: #5D4037;
    --primary-wood-light: #8D6E63;
    --gold-accent: #D32F2F; /* Changed to RED per brand identity */
    font-family: 'Almarai', sans-serif;
}

/* Aggressive Compression for "Half Size" Effect */
html {
    font-size: 13px; /* Drastic reduction from browser default 16px. All REM units will scale down by ~20% automatically */
}

body {
    direction: rtl;
    text-align: right;
    font-family: 'Almarai', sans-serif;
    background-color: #f8f9fa;
    line-height: 1.4; /* Tighter line height */
}

/* Force Tiny Headers */
h1 { font-size: 1.5rem !important; margin-bottom: 0.5rem; }
h2 { font-size: 1.3rem !important; margin-bottom: 0.5rem; }
h3 { font-size: 1.1rem !important; margin-bottom: 0.4rem; }
h4 { font-size: 1rem !important; margin-bottom: 0.3rem; }
h5, h6 { font-size: 0.9rem !important; margin-bottom: 0.2rem; }

/* Tighter Spacing */
section, main {
    margin-bottom: 1.5rem; /* Very tight sections */
    padding-top: 1rem;
    padding-bottom: 1rem;
}

.container {
    max-width: 1140px; /* Keep width but content will look smaller inside */
}

/* Card & Component Compression */
.card {
    margin-bottom: 1rem;
    border: none;
}
.card-body {
    padding: 0.75rem !important; /* Reduced padding */
}
.card-title {
    font-size: 1.1rem;
}

/* Navbar Ultra-Compact */
.navbar {
    padding-top: 0.25rem !important;
    padding-bottom: 0.25rem !important;
    min-height: auto;
}
.navbar-brand img {
    height: 40px !important; /* Smaller Logo */
}
.navbar-dark .navbar-nav .nav-link {
    font-size: 0.8rem !important;
    padding: 0.2rem 0.6rem !important;
    margin: 0 1px;
}

/* Button Scaling */
.btn {
    padding: 0.25rem 0.75rem;
    font-size: 0.85rem;
}
.btn-lg {
    padding: 0.4rem 1rem;
    font-size: 1rem;
}
.navbar-dark .navbar-nav .nav-link:hover,
.navbar-dark .navbar-nav .nav-link:focus {
    color: var(--gold-accent);
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
}

/* Card Hover Effect */
.hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
}

/* Group Hover Effect for Products */
.group-hover-effect:hover .product-image img {
    transform: scale(1.05);
}
.transition-transform {
    transition: transform 0.5s ease;
}

/* Buttons */
.btn-primary {
    background-color: var(--primary-wood);
    border-color: var(--primary-wood);
}
.btn-primary:hover {
    background-color: #4E342E;
    border-color: #4E342E;
}
.btn-warning {
    background-color: var(--gold-accent);
    border-color: var(--gold-accent);
    color: #fff;
}
.btn-warning:hover {
    background-color: #b71c1c; /* Darker Red */
    border-color: #b71c1c;
    color: #fff;
}

/* Bootstrap Overrides for Brand Identity (Red instead of Yellow) */
.text-warning {
    color: var(--gold-accent) !important;
}
.bg-warning {
    background-color: var(--gold-accent) !important;
}
.border-warning {
    border-color: var(--gold-accent) !important;
}
.badge.bg-warning {
    background-color: var(--gold-accent) !important;
    color: #fff !important;
}

