---
layout: base.njk
title: {{ products_page.hero.title }}
---

<!-- Hero Section -->
<section class="d-flex align-items-center justify-content-center text-center text-white mb-5" style="height: 350px; background: {% if products_page.hero.image %}linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('{{ products_page.hero.image }}') no-repeat center center/cover{% else %}linear-gradient(135deg, var(--primary-wood) 0%, var(--primary-wood-light) 100%){% endif %};">
  <div class="container">
    <h1 class="display-4 fw-bold mb-3">{{ products_page.hero.title }}</h1>
    <p class="lead fs-3">{{ products_page.hero.subtitle }}</p>
  </div>
</section>

<div class="container">

  <!-- Categories Filter -->
  <div class="row justify-content-center mb-5">
    <div class="col-md-10">
      <div class="d-flex justify-content-center flex-wrap gap-2" role="group" aria-label="Product Categories">
          <button type="button" class="btn btn-outline-primary active rounded-pill px-4 js-filter-btn" data-filter="all">الكل</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="bedrooms">غرف نوم</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="kids-bedrooms">غرف أطفال</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="sofas">أنتريهات</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="corners">ركنات</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="dining">سفرة</button>
          <button type="button" class="btn btn-outline-primary rounded-pill px-4 js-filter-btn" data-filter="kitchens">مطابخ</button>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="row g-4" id="products-grid">
    {% for product in products.products %}
    <div class="col-lg-4 col-md-6 product-item" data-category="{{ product.category }}">
      <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden product-card">
        <div class="position-relative overflow-hidden">
            <img src="{{ product.image }}" class="card-img-top object-fit-cover" alt="{{ product.name }}" style="height: 280px; transition: transform 0.5s ease;">
            <div class="position-absolute top-0 end-0 m-3">
                <span class="badge bg-white text-primary shadow-sm px-3 py-2 rounded-pill fw-bold">
                    {{ product.price | float }} جنيه
                </span>
            </div>
             <!-- Overlay with Action Button -->
            <div class="card-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-25 opacity-0 transition-opacity">
                 <a href="/product-details/?id={{ product.id }}" class="btn btn-light rounded-pill px-4 py-2 fw-bold shadow-lg transform-scale">
                    <i class="fas fa-eye me-2"></i> عرض التفاصيل
                 </a>
            </div>
        </div>
        
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-start mb-2">
             <h3 class="h5 fw-bold mb-0 text-dark">
                <a href="/product-details/?id={{ product.id }}" class="text-decoration-none text-dark stretched-link">{{ product.name }}</a>
             </h3>
          </div>
          <p class="text-muted small mb-3 line-clamp-2">{{ product.description }}</p>
          
          <div class="d-flex align-items-center justify-content-between mt-auto pt-3 border-top border-light">
             <button class="btn btn-primary btn-sm rounded-pill px-3 js-add-to-cart" data-id="{{ product.id }}" style="z-index: 2; position: relative;">
                <i class="fas fa-shopping-cart me-2"></i> أضف للسلة
             </button>
             <small class="text-muted">
                <i class="fas fa-star text-warning me-1"></i> 4.8
             </small>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="row mt-5 pt-5 border-top">
    <div class="col-12 text-center mb-5">
      <h2 class="fw-bold section-title">{{ products_page.whyUs.title }}</h2>
    </div>
    {% for item in products_page.whyUs.items %}
    <div class="col-md-4 text-center mb-4">
      <div class="p-4 rounded-4 bg-light h-100">
        <div class="text-warning display-5 mb-3">
          <i class="{{ item.icon }}"></i>
        </div>
        <h4 class="h5 fw-bold">{{ item.title }}</h4>
        <p class="text-muted small mb-0">{{ item.description }}</p>
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="text-center mt-5">
      <p class="lead mb-4">هل تبحث عن عروض ومجموعة كاملة؟</p>
      <div class="d-flex justify-content-center gap-3">
         <a href="/offers/" class="btn btn-warning btn-lg text-dark fw-bold px-5">{{ products_page.cta.offersButton }}</a>
         <a href="/contact/" class="btn btn-outline-primary btn-lg px-5">{{ products_page.cta.contactButton }}</a>
      </div>
  </div>

</div>
