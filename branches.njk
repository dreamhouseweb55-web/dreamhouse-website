            {% if branch.phone %}
            <a href="tel:{{ branch.phone }}" class="btn btn-outline-primary rounded-pill">
              <i class="fas fa-phone me-2"></i> اتصل بالفرع
            </a>
            {% endif %}
            <button class="btn btn-primary rounded-pill">
              <i class="fas fa-directions me-2"></i> الاتجاهات
            </button>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

